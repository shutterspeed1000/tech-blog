<h2>Posts created by {{user.name}}

<div>

  {{#each retPosts as |blog|}}

    <div class="card" style="width: 75%;">
      <div class="card-body">
        <h5 class="card-title">Post by: {{title}}</h5>
        <h6 class="card-subtitle mb-2 text-muted">Created by:
          {{user.name}}
          on
          {{createdAt}}</h6>
        <p class="card-text">
          <div>
        <h3>{{text}}</h3>
          </div>
        </p>

        {{#if logged_in}}
          <a href="#" class="card-link" id="comment{{id}}">Comment</a>
        {{/if}}

      </div>
    </div>
  {{/each}}
<script src="../public/js/newComment.js>
</div>