<div>

  {{#each retPosts as |blog|}}

    <div class="card" style="width: 75%;">
      <div class="card-body">
        <a href="/post/{{id}}"><h5 class="card-title">Post Title:
            {{title}}</h5></a>
        <h6 class="card-subtitle mb-2 text-muted">Created by:
          {{user.name}}
          on
          {{createdAt}}</h6>
        <p class="card-text">
          <div>
            <h3>{{text}}</h3>
          </div>
        </p>

        <div>
        

          {{#each comments}}

            <p>{{comment}}</p>
          {{/each}}
        </div>

      </div>
    </div>
  {{/each}}
  <script src="./js/logout.js"></script>
</div>